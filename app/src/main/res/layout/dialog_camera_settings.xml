<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- 基础相机设置 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/basic_camera_settings"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginBottom="12dp" />

        <!-- 分辨率 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/resolution"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary" />

        <Spinner
            android:id="@+id/spinnerResolution"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp" />

        <!-- 对焦模式 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/focus_mode"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary" />

        <Spinner
            android:id="@+id/spinnerFocusMode"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp" />

        <!-- 曝光补偿 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exposure_compensation"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-2"
                android:textSize="12sp" />

            <SeekBar
                android:id="@+id/seekBarExposure"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="4"
                android:progress="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+2"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/exposureValue"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="14sp"
                tools:text="0" />

        </LinearLayout>

        <!-- 分隔线 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginBottom="16dp" />

        <!-- 图像增强设置 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/image_enhancement_settings"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginBottom="12dp" />

        <!-- 增强开关 -->
        <CheckBox
            android:id="@+id/checkBoxEnableEnhance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enable_enhance"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <!-- 分隔线 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <!-- 检测设置 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detection_settings"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginBottom="12dp" />

        <!-- 置信度阈值 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confidence_threshold"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary" />

        <EditText
            android:id="@+id/editTextConfidenceThreshold"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"
            android:inputType="number"
            android:hint="990"
            android:textSize="14sp"
            android:gravity="center"
            android:selectAllOnFocus="true" />

        <!-- 自动捕获开关 -->
        <CheckBox
            android:id="@+id/checkBoxAutoCapture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enable_auto_capture"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <!-- 自动捕获置信度阈值 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/auto_capture_threshold"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary" />

        <EditText
            android:id="@+id/editTextAutoCaptureThreshold"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:inputType="number"
            android:hint="998"
            android:textSize="14sp"
            android:gravity="center"
            android:selectAllOnFocus="true" />

    </LinearLayout>

</ScrollView>
