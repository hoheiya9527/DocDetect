<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- 基础相机设置 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/basic_camera_settings"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginBottom="12dp" />

        <!-- 分辨率 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/resolution"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary" />

        <Spinner
            android:id="@+id/spinnerResolution"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp" />

        <!-- 对焦模式 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/focus_mode"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary" />

        <Spinner
            android:id="@+id/spinnerFocusMode"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp" />

        <!-- 曝光补偿 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exposure_compensation"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-2"
                android:textSize="12sp" />

            <SeekBar
                android:id="@+id/seekBarExposure"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="4"
                android:progress="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+2"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/exposureValue"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="14sp"
                tools:text="0" />

        </LinearLayout>

        <!-- ISO -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iso"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary" />

        <Spinner
            android:id="@+id/spinnerIso"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="24dp" />

        <!-- 分隔线 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginBottom="16dp" />

        <!-- 图像增强设置 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/image_enhancement_settings"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginBottom="12dp" />

        <!-- 增强开关 -->
        <CheckBox
            android:id="@+id/checkBoxDetectionEnhance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enable_detection_enhance"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <CheckBox
            android:id="@+id/checkBoxRecognitionEnhance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enable_recognition_enhance"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <!-- 轻量增强强度 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/light_enhance_strength"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:textSize="12sp" />

            <SeekBar
                android:id="@+id/seekBarLightEnhanceStrength"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.0"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/lightEnhanceStrengthValue"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="14sp"
                tools:text="0.20" />

        </LinearLayout>

        <!-- CLAHE限制 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clahe_clip_limit"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.0"
                android:textSize="12sp" />

            <SeekBar
                android:id="@+id/seekBarClaheClipLimit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="300" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.0"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/claheClipLimitValue"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="14sp"
                tools:text="2.0" />

        </LinearLayout>

        <!-- CLAHE网格大小 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clahe_tile_size"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="12sp" />

            <SeekBar
                android:id="@+id/seekBarClaheTileSize"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="28" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="32"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/claheTileSizeValue"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="14sp"
                tools:text="16" />

        </LinearLayout>

        <!-- 锐化强度 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sharpen_strength"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:textSize="12sp" />

            <SeekBar
                android:id="@+id/seekBarSharpenStrength"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.0"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/sharpenStrengthValue"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="14sp"
                tools:text="0.20" />

        </LinearLayout>

        <!-- 清晰度阈值 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sharpness_threshold"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50"
                android:textSize="12sp" />

            <SeekBar
                android:id="@+id/seekBarSharpnessThreshold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="250" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="300"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/sharpnessThresholdValue"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="14sp"
                tools:text="100" />

        </LinearLayout>

        <!-- 对比度阈值 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contrast_threshold"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.1"
                android:textSize="12sp" />

            <SeekBar
                android:id="@+id/seekBarContrastThreshold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="90" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.0"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/contrastThresholdValue"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="14sp"
                tools:text="0.30" />

        </LinearLayout>

        <!-- 分隔线 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <!-- 检测设置 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detection_settings"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginBottom="12dp" />

        <!-- 置信度阈值 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confidence_threshold"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary" />

        <EditText
            android:id="@+id/editTextConfidenceThreshold"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"
            android:inputType="number"
            android:hint="990"
            android:textSize="14sp"
            android:gravity="center"
            android:selectAllOnFocus="true" />

        <!-- 自动捕获开关 -->
        <CheckBox
            android:id="@+id/checkBoxAutoCapture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enable_auto_capture"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <!-- 自动捕获置信度阈值 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/auto_capture_threshold"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary" />

        <EditText
            android:id="@+id/editTextAutoCaptureThreshold"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:inputType="number"
            android:hint="998"
            android:textSize="14sp"
            android:gravity="center"
            android:selectAllOnFocus="true" />

    </LinearLayout>

</ScrollView>
