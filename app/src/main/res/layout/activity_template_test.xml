<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black">

    <!-- 上半屏：相机预览 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.urovo.templatedetector.view.CameraPreviewLayout
            android:id="@+id/cameraPreviewLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <!-- 下半屏：匹配结果信息 -->
    <LinearLayout
        android:id="@+id/resultContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="?android:colorBackground">

        <!-- 匹配状态栏 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:background="?colorSurface">

            <!-- 状态指示器 -->
            <ImageView
                android:id="@+id/imageViewStatus"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_waiting"
                tools:ignore="ContentDescription" />

            <!-- 模板名称 -->
            <TextView
                android:id="@+id/textViewTemplateName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="模板名称" />

            <!-- 置信度 -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipConfidence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:visibility="gone"
                tools:text="85.5%" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:dividerHorizontal" />

        <!-- 区域内容列表 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewRegions"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:padding="8dp"
            tools:listitem="@layout/item_region_content" />

        <!-- 等待提示（无匹配结果时显示） -->
        <TextView
            android:id="@+id/textViewWaiting"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/guidance_preview"
            android:textColor="?android:textColorSecondary"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>
